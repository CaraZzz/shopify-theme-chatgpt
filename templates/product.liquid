
{% layout 'theme' %}
<section class="max-w-4xl mx-auto px-4 py-12">
  <div class="grid md:grid-cols-2 gap-10">
    <div>
      {% if product.featured_image %}
        <img src="{{ product.featured_image | img_url: '1024x1024' }}" alt="{{ product.title }}" class="w-full rounded shadow" />
      {% endif %}
    </div>
    <div>
      <h1 class="text-3xl font-bold mb-4">{{ product.title }}</h1>
      <p class="text-xl text-purple-600 font-semibold mb-4">{{ product.price | money }}</p>
      <div class="mb-6">
        {{ product.description }}
      </div>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="px-6 py-2 bg-black text-white rounded-full">Add to Cart</button>
      </form>
      {% if product.metafields.custom.vibe %}
        <p class="mt-6 italic text-sm text-gray-500">Vibe: {{ product.metafields.custom.vibe }}</p>
      {% endif %}
      {% if product.metafields.custom.quote %}
        <blockquote class="mt-4 text-gray-600 border-l-4 pl-4 italic">
          “{{ product.metafields.custom.quote }}”
        </blockquote>
      {% endif %}
    </div>
  </div>
</section>
